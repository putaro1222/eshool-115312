<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('furima-logo-color.png' , size: '100x100'), "/" %>
  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">講義投稿フォーム</h2>
    <%= form_with local: true do |f| %>


    <%# render 'shared/error_messages', model: f.object %>

    <%# 講義画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        画像の投稿  又は  サムネイルの添付
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /講義画像 %>

    <%# 講義名と講義説明 %>
    <div class="items-detail">
      <div class="form">
        <div class="weight-bold-text">
          講義のカテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>
    <div class="new-items">
      <div class="weight-bold-text">
      YouTubeの動画投稿
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :class_url, class:"items-text", id:"item-name", placeholder:"YouTubeのURLを入力してください", maxlength:"40" %>
      <div class="weight-bold-text">
        講義名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :class_name, class:"items-text", id:"item-name", placeholder:"講義名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          講義の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :class_info, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /講義名と講義説明 %>
    
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">eSCHOL利用規約</a></li>
    </ul>
    <%= link_to image_tag('furima-logo-color.png' , size: '100x100'), "/" %>
    <p class="inc">
      ©︎eSCHOOL,Inc.
    </p>
  </footer>
</div>